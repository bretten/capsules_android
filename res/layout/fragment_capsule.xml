<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/fragment_capsule_owner_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:drawableLeft="@drawable/ic_account_circle_black_24dp"
        android:drawablePadding="2dp"
        android:drawableStart="@drawable/ic_account_circle_black_24dp" />

    <TextView
        android:id="@+id/fragment_capsule_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/fragment_capsule_owner_username"
        android:layout_toStartOf="@id/fragment_capsule_owner_username"
        android:textSize="20sp" />

    <ProgressBar
        android:id="@+id/fragment_capsule_progress_bar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_capsule_name"
        android:layout_gravity="center_horizontal"
        android:indeterminate="true" />

    <ImageView
        android:id="@+id/fragment_capsule_memoir_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_capsule_progress_bar"
        android:layout_gravity="center_horizontal"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/fragment_capsule_memoir_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_capsule_memoir_image" />

    <TextView
        android:id="@+id/fragment_capsule_memoir_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_capsule_memoir_title" />

    <LinearLayout
        android:id="@+id/fragment_capsule_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_capsule_memoir_message"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fragment_capsule_total_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_whatshot_black_24dp"
            android:drawablePadding="2dp"
            android:drawableStart="@drawable/ic_whatshot_black_24dp"
            android:gravity="center_vertical"
            android:padding="10dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/fragment_capsule_discovery_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_place_black_24dp"
            android:drawablePadding="2dp"
            android:drawableStart="@drawable/ic_place_black_24dp"
            android:gravity="center_vertical"
            android:padding="10dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/fragment_capsule_favorite_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_star_rate_black_24dp"
            android:drawablePadding="2dp"
            android:drawableStart="@drawable/ic_star_rate_black_24dp"
            android:gravity="center_vertical"
            android:padding="10dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

    </LinearLayout>

</RelativeLayout>
