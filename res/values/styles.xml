<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!--
        Toolbar Widget
    -->
    <style name="AppTheme.Toolbar" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/primary_color</item>
    </style>

    <!--
        General input
    -->
    <!-- Base -->
    <style name="AppTheme.Input" parent="AppTheme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
    </style>
    <!-- Label -->
    <style name="AppTheme.Input.Label" parent="AppTheme.Input">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- EditText -->
    <style name="AppTheme.Input.EditText" parent="AppTheme.Input">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <!-- Submit button -->
    <style name="AppTheme.Input.Button" parent="AppTheme.Input">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!-- Error message -->
    <style name="AppTheme.Input.Error" parent="AppTheme.Input">
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/message_error_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/error_message</item>
        <item name="android:visibility">gone</item>
    </style>

    <!--
        ListView
    -->
    <!-- Base -->
    <style name="AppTheme.List" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:choiceMode">singleChoice</item>
    </style>
    <!-- Accounts -->
    <style name="AppTheme.List.Accounts" parent="AppTheme.List">
        <item name="android:layout_height">200dp</item>
    </style>

    <!--
        ListView items
    -->
    <!-- Base -->
    <style name="AppTheme.ListItem" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">25sp</item>
    </style>
    <!-- Accounts -->
    <style name="AppTheme.ListItem.Account" parent="AppTheme.ListItem">
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
